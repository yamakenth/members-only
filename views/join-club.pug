extends layout

block content
  form(action='' method='POST')
    h1 Join the Club
    label(for='secret-passcode') Secret Passcode
    input(
      id='secret-passcode'
      name='secret_passcode' 
      type='password' 
      required='true' 
      value=((passcode===undefined) ? '' : passcode)
    )
    button(type='submit') Submit
  
  if error
    p= error