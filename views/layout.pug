doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3' crossorigin='anonymous')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p' crossorigin='anonymous' defer=true)
  body
    //- HEADER
    nav(class='navbar navbar-expand-sm navbar-dark bg-dark')
      div(class='container')
          //- LOGO
          a(class='navbar-brand', href='/')
            i(class='bi bi-file-lock2-fill nav-brand-logo')
            |  MembersOnly
          //- NAV
          ul(class='navbar-nav')
            if !currentUser
              li(class='nav-item')
                a(class='nav-link' href='/signup') 
                  i(class='bi bi-person-fill')
                  |  Signup
              li(class='nav-item')
                a(class='nav-link' href='/login') 
                  i(class='bi bi-box-arrow-in-left')
                  |  Login        
            else 
              li(class='nav-item')
                a(class='nav-link' href='/new-message')
                  i(class='bi bi-chat-dots')
                  |  Create Message
              li(class='nav-item')
                a(class='nav-link' href='/membership') 
                  i(class='bi bi-lock')
                  |  Become Member
              li(class='nav-item')
                a(class='nav-link' href='/admin') 
                  i(class='bi bi-gear')
                  |  Become Admin
              li(class='nav-item')
                a(class='nav-link' href='/logout') 
                  i(class='bi bi-box-arrow-right')
                  |  Logout
    //- CONTENT
    main(class='container py-5')
      block content