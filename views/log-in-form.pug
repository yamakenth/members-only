extends layout

block content
  form(action='' method='POST')
    h1 Login
    label(for='email') Email
    input(
      id='email' 
      name='email' 
      type='email' 
      required='true' 
      value=((user===undefined) ? '' : user.email)
    )
    label(for='password') Password
    input(
      id='password' 
      name='password' 
      type='password' 
      required='true' 
      value=((user===undefined) ? '' : user.password)
    )
    button(type='submit') Login
  
  if errors
    ul
      for error in errors
        li!= error.msg