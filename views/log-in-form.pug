extends layout

block content
  form(action='' method='POST')
    h1 Login
    div(class='form-group')
      label(for='email') Email
      input(
        id='email' 
        name='email' 
        type='email' 
        required='true' 
        value=((user===undefined) ? '' : user.email)
        class='form-control'
      )
    div(class='form-group')
      label(for='password') Password
      input(
        id='password' 
        name='password' 
        type='password' 
        required='true' 
        value=((user===undefined) ? '' : user.password)
        class='form-control'
      )
    button(type='submit' class='btn btn-default') Login
  
  if errors
    ul
      for error in errors
        li!= error.msg