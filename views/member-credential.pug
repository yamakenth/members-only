extends layout

block content
  form(action='' method='POST')
    h1 Membership
    div(class='form-group')
      label(for='secret-passcode') Secret Passcode
      input(
        id='secret-passcode'
        name='secret_passcode' 
        type='password' 
        required='true' 
        value=((passcode===undefined) ? '' : passcode)
        class='form-control'
      )
    button(type='submit' class='btn btn-default') Submit
  
  if error
    p= error